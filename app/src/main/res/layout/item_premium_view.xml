<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    >

    <ImageView
        android:id="@+id/leftPhoto"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rightPhoto"
        app:layout_constraintVertical_weight="1"
        tools:src="@drawable/ic_launcher_background"
    />

    <ImageView
        android:id="@+id/rightPhoto"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toRightOf="@+id/leftPhoto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_weight="1"
        tools:src="@drawable/ic_launcher_background"
    />

    <TextView
        android:id="@+id/rowOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/leftPhoto"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Auction"
    />

    <TextView
        android:id="@+id/rowTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/rowOne"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="1 bed, 1, bath, 1 car"
    />

    <TextView
        android:id="@+id/rowThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/rowTwo"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Pirrama Road, Pyrmont"
    />

    <Button
        android:id="@+id/agencyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rowThree"
    />

    <ImageView
        android:id="@+id/starImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_star_border_black_24px"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    />

</android.support.constraint.ConstraintLayout>